<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.timsmith.responder.MainActivity">


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/incident_list">
    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"

        app:layout_anchorGravity="bottom|right|end"
        app:backgroundTint="?attr/colorPrimary"
        android:src="@mipmap/ic_warning_white_24dp"
        android:id="@+id/floatHazard"
        android:clickable="true"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <!--<LinearLayout>-->
        <Button
            android:background="@drawable/button_bg_square_corners"
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_geofences_button"

            android:layout_weight="1"/>
        <!--android:onClick="setButtonsEnabledState"-->


        <Button
            android:background="@drawable/button_bg_square_corners"
            android:text="Remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remove_geofences_button"
            android:layout_columnWeight="1"
            />
        <!--android:onClick="removeGeofencesButtonHandler"-->

        <!--</LinearLayout>-->
        <!--<LinearLayout>-->
            <Button
                android:background="@drawable/button_bg_square_corners"
                android:textColor="@android:color/white"
                android:text="Filter Location"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:id="@+id/select_location"/>
        <!--</LinearLayout>-->
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>

